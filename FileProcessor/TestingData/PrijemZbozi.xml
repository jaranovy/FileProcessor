<?xml version="1.0" encoding="utf-8" ?>
<FileProcessorConfig xmlns="http://novych.cz/schemas/Schemas/FileProcessorConfig"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://novych.cz/schemas/Schemas/FileProcessorConfig FileProcessorConfig.xsd">
  <Task>
    <Files>
      <File>.\TestingData\PrijemZbozi.csv</File>
    </Files>
    <Actions>
      <Archive>
        <Destination>.\TestingData\Backup\</Destination>
      </Archive>
      <ProcessRecord>
        <Query>update zbozi set pocet_dostupnych_kusu = pocet_dostupnych_kusu + pocet_prijatych_kusu where id = ID_zbozi</Query>
      </ProcessRecord>
      <Export>
        <Query>select id, nazev, pocet_dostupnych_kusu from zbozi order by id</Query>
        <Destination>.\TestingData\PrijatoZbozi.csv</Destination>
      </Export>
    </Actions>
  </Task>
</FileProcessorConfig>